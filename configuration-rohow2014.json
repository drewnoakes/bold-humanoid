{
  "inherits": "configuration-team.json",

  "team-number": 3,
  "team-colour" : 1,

  "camera": {
    "settings": {
      "auto-wb": false,
      "exposure-auto": 1,
      "exposure-absolute": 800,
      "exposure-auto-priority": false,
      "backlight-compensation": false,
      "power-line-frequency": 2,
      "brightness": 128,
      "contrast": 32,
      "saturation": 28,
      "gain": 200,
      "wb-temp-k": 4400,
      "sharpness": 0
    }
  },

  "world": {
    "ball-diameter": 0.1
  },

  "spatialiser": {
    "use-orientation": false
  },

  "hardware": {
    "leds": {
      "enable-eyes": true,
      "enable-forehead": true
    }
  },

  "vision": {
    "pixel-labels": {
        "ball":  { "hue": [0, 15], "sat": [190, 240], "val": [80, 195] },
        "field": { "hue": [80, 110], "sat": [185, 230], "val": [60, 185] },
        "goal":  { "hue": [35, 50], "sat": [155, 230], "val": [135, 190] },
        "line":  { "hue": [0, 255], "sat": [0, 167], "val": [120, 255] }
    },
    "field-edge-pass": {
      "min-vertical-run-length": 13
    },
    "goal-detection": {
      "max-field-edge-distance-px": 10,
      "accepted-width-ratio": [0.1, 5.0]
    },
    "player-detection": {
      "enable": false
    }
  },

  "options": {
    "approach-ball": {
      "max-forward-speed": 40.0
    }
  }
}
