{
  "inherits": "configuration-team.json",

  "team-number": 3,

  "camera": {
    "settings": {
      "auto-wb": false,
      "exposure-auto": 1,
      "exposure-absolute": 200,
      "exposure-auto-priority": false,
      "backlight-compensation": false,
      "power-line-frequency": 2,
      "brightness": 128,
      "contrast": 32,
      "saturation": 32,
      "gain": 255,
      "wb-temp-k": 0,
      "sharpness": 191
    }
  },

  "world": {
    "field-size-x": 3.4,
    "field-size-y": 1.9,
    "goal-size-x": 0.2,
    "goal-size-y": 0.85,
    "goal-size-z": 0.6,
    "goal-post-diameter": 0.1,
    "goal-area-size-x": 0.4,
    "goal-area-size-y": 1.6,
    "penalty-mark-distance": 1.1,
    "circle-diameter": 0.5,
    "circle-segment-count": 18,
    "line-width": 0.05,
    "penalty-line-length": 0.1,
    "outer-margin-minimum": 0.2,
    "ball-diameter": 0.1
  },

  "localiser": {
    "smoothing-window-size": 7,
    "position-error": 0.01,
    "angle-error-degrees": 0.5
  },

  "vision": {
    "goal-detection": {
      "max-field-edge-distance-px": 0,
      "accepted-width-ratio": [0.4, 1.4]
    },
    "pixel-labels": {
      "goal":  { "hue": [30,  60], "sat": [110, 255], "val": [70, 222] },
      "ball":  { "hue": [248, 10], "sat": [72,  255], "val": [60, 255] },
      "field": { "hue": [72, 118], "sat": [130, 236], "val": [40,  192] },
      "line":  { "hue": [0,  255], "sat": [0,   167], "val": [161, 255] }
    }
  }
}
