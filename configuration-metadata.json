{
  "hardware": {
    "cm730-path":   { "type": "string", "readonly": true, "default": "/dev/ttyUSB0" },
    "video-path":   { "type": "string", "readonly": true, "default": "/dev/video0" },
    "voice":        { "type": "string", "readonly": true, "default": "english-mb-en1" },
    "joystick": {
      "enabled":   { "type": "bool", "readonly": true, "default": false },
      "x-amp-max": { "type": "double", "min": 1.0, "max": 30.0, "readonly": false, "default": 15.0 },
      "y-amp-max": { "type": "double", "min": 1.0, "max": 30.0, "readonly": false, "default": 15.0 },
      "a-amp-max": { "type": "double", "min": 1.0, "max": 30.0, "readonly": false, "default": 15.0 }
    }
  },
  "world": {
    "field-size-x":          { "type": "double", "readonly": true, "default": 6.0 },
    "field-size-y":          { "type": "double", "readonly": true, "default": 4.0 },
    "goal-size-x":           { "type": "double", "readonly": true, "default": 0.5 },
    "goal-size-y":           { "type": "double", "readonly": true, "default": 1.5 },
    "goal-size-z":           { "type": "double", "readonly": true, "default": 0.8 },
    "goal-post-diameter":    { "type": "double", "readonly": true, "default": 0.1 },
    "goal-area-size-x":      { "type": "double", "readonly": true, "default": 0.6 },
    "goal-area-size-y":      { "type": "double", "readonly": true, "default": 2.2 },
    "penalty-mark-distance": { "type": "double", "readonly": true, "default": 0.8 },
    "circle-diameter":       { "type": "double", "readonly": true, "default": 1.2 },
    "line-width":            { "type": "double", "readonly": true, "default": 0.05 },
    "penalty-line-length":   { "type": "double", "readonly": true, "default": 0.1 },
    "outer-margin-minimum":  { "type": "double", "readonly": true, "default": 0.7 },
    "ball-diameter":         { "type": "double", "readonly": true, "default": 0.067 }
  },
  "camera": {
    "image-width":  { "type": "int", "readonly": true, "default": 320 },
    "image-height": { "type": "int", "readonly": true, "default": 240 },
    "focal-length": { "type": "double", "readonly": true, "default": 0.025 },
    "field-of-view": {
      "vertical-degrees":   { "type": "double", "readonly": true, "default": 46.0 },
      "horizontal-degrees": { "type": "double", "readonly": true, "default": 58.0 }
    },
    "settings": {
      "brightness":             { "type": "int", "min": 0, "max": 255, "default": 128 },
      "contrast":               { "type": "int", "min": 0, "max": 255, "default": 32 },
      "saturation":             { "type": "int", "min": 0, "max": 255, "default": 28 },
      "gain":                   { "type": "int", "min": 0, "max": 255, "default": 255 },
      "exposure":               { "type": "int", "min": 0, "max": 255, "default": 1000 },
      "auto-wb":                { "type": "int", "min": 0, "max": 255, "default": 0 },
      "power-line-frequency":   { "type": "int", "min": 0, "max": 255, "default": 2 },
      "wb-temp-k":              { "type": "int", "min": 0, "max": 255, "default": 0 },
      "sharpness":              { "type": "int", "min": 0, "max": 255, "default": 191 },
      "backlight-compensation": { "type": "int", "min": 0, "max": 255, "default": 0 },
      "exposure-auto":          { "type": "int", "min": 0, "max": 255, "default": 3 },
      "exposure-absolute":      { "type": "int", "min": 0, "max": 255, "default": 133 },
      "exposure-auto-priority": { "type": "int", "min": 0, "max": 255, "default": 0 }
    }
  },
  "vision": {
    "min-ball-area":             { "type": "int", "min": 0, "max": 255, "default": 0, "advanced": true },
    "min-goal-dimension-pixels": { "type": "int", "min": 1, "max": 50, "default": 1, "advanced": true },
    "pixel-labels": {
      "goal":  { "type": "pixel-label", "default": { "hue": [44, 60],  "sat": [158, 236], "val": [124, 222] } },
      "ball":  { "type": "pixel-label", "default": { "hue": [248, 23], "sat": [72, 255],  "val": [12, 255] } },
      "field": { "type": "pixel-label", "default": { "hue": [72, 118], "sat": [166, 236], "val": [52, 192] } },
      "line":  { "type": "pixel-label", "default": { "hue": [0, 255],  "sat": [0, 167],   "val": [161, 255] } }
    },
    "ignore-above-horizon": { "type": "bool", "default": true },
    "recording-frames": { "type": "bool", "default": false },
    "line-detection": {
      "enable":      { "type": "bool", "default": false },
      "line-dots": {
        "hysterisis": { "type": "int", "min": 0, "max": 255, "default": 3, "advanced": true }
      },
      "mask-walk": {
        "delta-r":            { "type": "double", "min": 1.0, "max": 20.0, "default": 3.0, "advanced": true },
        "delta-theta-degs":   { "type": "double", "min": 1.0, "max": 20.0, "default": 3.0, "advanced": true },
        "min-votes":          { "type": "int", "min": 1, "max": 20, "default": 10, "advanced": true },
        "min-line-length":    { "type": "int", "min": 1, "default": 30, "advanced": true },
        "max-line-gap":       { "type": "int", "min": 0, "max": 50, "default": 30, "advanced": true },
        "max-lines-returned": { "type": "int", "min": 1, "max": 20, "default": 5, "advanced": true }
      },
    },
    "label-counter": {
      "enable": { "type": "bool", "default": false }
    },
    "field-edge-pass": {
      "smoothing-window-length": { "type": "int", "min": 1, "max": 100, "default": 15, "advanced": true },
      "min-vertical-run-length": { "type": "int", "min": 1, "max": 100, "default": 5, "advanced": true }
    }
  },
  "game-controller": {
    "tcp-port": { "type": "int", "min": 1025, "max": 65535, "readonly": true, "default": 3838 }
  },
  "round-table": {
    "tcp-port": { "type": "int", "min": 1025, "max": 65535, "readonly": true, "default": 8080 },
    "camera-frame-frequency": { "type": "int", "min": 1, "max": 100, "default": 5 },
    "image-features": {
      "blobs":          { "type": "bool", "default": true },
      "line-dots":      { "type": "bool", "default": false },
      "observed-lines": { "type": "bool", "default": false },
      "expected-lines": { "type": "bool", "default": false },
      "horizon":        { "type": "bool", "default": true },
      "field-edge":     { "type": "bool", "default": true },
      "objects":        { "type": "bool", "default": true }
    }
  },
  "localiser": {
    "particle-count":        { "type": "int", "min": 1, "max": 2000, "default": 100 },
    "smoothing-window-size": { "type": "int", "min": 1, "max": 100, "default": 5 },
    "randomise-ratio":       { "type": "double", "min": 0.0, "max": 1.0, "default": 0.03 },
    "reward-fall-off":       { "type": "double", "min": 0.0, "max": 1.0, "default": 0.5 },
    "use-lines":             { "type": "bool", "default": true },
    "min-goals-needed":      { "type": "int", "min": 1, "max": 5, "default": 1 },
    "position-error":        { "type": "double", "min": 0.0, "max": 0.1, "default": 0.03 },
    "angle-error-degrees":   { "type": "double", "min": 0.0, "max": 20.0, "default": 2.0 }
  },
  "head-module": {
    "p-gain":             { "type": "int", "min": 1, "max": 255, "default": 8 },
    "pan-limit-degrees":  { "type": "double-range", "default": [-135.0, 135.0] },
    "tilt-limit-degrees": { "type": "double-range", "default": [-22.0, 40.0] },
    "tracking": {
      "pan": {
        "p-gain": { "type": "double", "min": 0.0, "max": 1.0, "default": 0.03 },
        "d-gain": { "type": "double", "min": 0.0, "max": 1.0, "default": 0.1 }
      },
      "tilt": {
        "p-gain": { "type": "double", "min": 0.0, "max": 1.0, "default": 0.03 },
        "d-gain": { "type": "double", "min": 0.0, "max": 1.0, "default": 0.1 }
      }
    },
    "home-pan":  { "type": "double", "min": -80.0, "max": 80.0, "default": 0.0 },
    "home-tilt": { "type": "double", "min": -22.0, "max": 40.0, "default": -10.0 }
  },
  "walk-module": {
    "x-offset":         { "type": "double", "default": -10.0 },
    "y-offset":         { "type": "double", "default": 5.0 },
    "z-offset":         { "type": "double", "default": 20.0 },
    "roll-offset":      { "type": "double", "default": 0.0 },
    "pitch-offset":     { "type": "double", "default": 0.0 },
    "yaw-offset":       { "type": "double", "default": 0.0 },
    "hip-pitch-offset": { "type": "double", "default": 17.0 },
    "period-time":      { "type": "double", "default": 600.0 },
    "dsp-ratio":        { "type": "double", "default": 0.1 },
    "foot-height":      { "type": "double", "default": 40.0 },
    "swing-right-left": { "type": "double", "default": 20.0 },
    "swing-top-down":   { "type": "double", "default": 5.0 },
    "pelvis-offset":    { "type": "double", "default": 3.0 },
    "arm-swing-gain":   { "type": "double", "default": 1.5 },
    "step-fb-ratio":    { "type": "double", "default": 0.28 },
    "a-move-aim-enable": { "type": "bool", "default": false },
    "balance": {
      "enable":           { "type": "bool", "default": true, "description": "Enable auto-balance" },
      "knee-gain":        { "type": "double", "default": 1.2 },
      "ankle-pitch-gain": { "type": "double", "default": 3.6 },
      "hip-roll-gain":    { "type": "double", "default": 2.0 },
      "ankle-roll-gain":  { "type": "double", "default": 4.0 }
    },
    "p-gain":           { "type": "int", "default": 32 },
    "i-gain":           { "type": "int", "default": 0 },
    "d-gain":           { "type": "int", "default": 0 }
  },
  "ambulator": {
    "x-amp-delta":   { "type": "double", "default": 5.0, "description": "X smoothing delta" },
    "y-amp-delta":   { "type": "double", "default": 5.0, "description": "Y smoothing delta" },
    "turn-delta":    { "type": "double", "default": 1.0, "description": "Turn smoothing delta" },
    "max-hip-pitch-at-speed": { "type": "double", "default": 15.0, "description": "Max hip pitch @ speed" },
    "min-hip-pitch": { "type": "double", "default": 13.0, "description": "Min hip pitch" },
    "max-hip-pitch": { "type": "double", "default": 17.0, "description": "Max hip pitch" }
  },
  "options": {
    "circle-ball": {
      "walk-x":    { "type": "double", "default": 1.0 },
      "walk-y":    { "type": "double", "default": 20.0 },
      "walk-turn": { "type": "double", "default": 15.0 }
    },
    "approach-ball": {
      "turn-speed-scale":  { "type": "double", "default": 25.0 },
      "max-forward-speed": { "type": "double", "default": 40.0 },
      "min-forward-speed": { "type": "double", "default": 5.0 },
      "brake-distance":    { "type": "double", "default": 0.45 },
      "stop-distance":     { "type": "double", "default": 0.075 },
      "lower-turn-limit-degs": { "type": "double", "default": 20.0 },
      "upper-turn-limit-degs": { "type": "double", "default": 35.0 }
    },
    "look-around": {
      "top-angle":      { "type": "double", "default": 30.0 },
      "bottom-angle":   { "type": "double", "default": -25.0 },
      "horiz-duration": { "type": "double", "default": 2.3 },
      "vert-duration":  { "type": "double", "default": 0.2 }
    },
    "look-at-feet": {
      "head-pan-degs":  { "type": "double", "default": 0 },
      "head-tilt-degs": { "type": "double", "default": -67.5 }
    }
  }
}
